  <script>
    const backgrounds = [
      'bg1.jpg',
      'bg2.jpg',
      'bg3.jpg',
      'bg4.jpg'
    ];

    let index = 0;

    document.body.style.backgroundImage = url(${backgrounds[index]});

    document.body.addEventListener('click', () => {
      index = (index + 1) % backgrounds.length;
      document.body.style.backgroundImage = url(${backgrounds[index]});
    });
  </script>

